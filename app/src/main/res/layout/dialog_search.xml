<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink"
    android:orientation="vertical"
    android:padding="5dp">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="@string/searchTerm"
        android:inputType="text"
        android:textSize="24sp"
        android:autofillHints="@string/searchTerm" />

    <CheckBox
        android:id="@+id/cb_show_server"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:buttonTint="#8EF076"
        android:checked="true"
        android:fontFamily="@font/roboto"
        android:text="@string/showServerDrops"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cb_show_local"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:buttonTint="#76BEFF"
        android:checked="true"
        android:fontFamily="@font/roboto"
        android:text="@string/showYourDrops"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/roundcorner_red"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/search"
            app:srcCompat="@drawable/ic_search_black_24dp"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tv_search_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/search"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>